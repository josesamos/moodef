Type: Package
Package: moodef
Title: Definition of Moodle Question Bank
Version: 0.1.0
Authors@R: c(
    person("Jose", "Samos", , "jsamos@ugr.es", role = c("aut", "cre"),
           comment = c(ORCID = "0000-0002-4457-3439")),
    person("Universidad de Granada", role = "cph")
